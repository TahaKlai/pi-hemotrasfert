<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.PieChart?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.hemotransfert.hemotransfert.ReportController" prefWidth="600" prefHeight="400">
    <Label text="Report" />
    <TableView fx:id="donsParDateTable">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" />
            <TableColumn fx:id="donsColumn" text="Dons" />
        </columns>
    </TableView>
    <PieChart fx:id="donTypeChart" />
    <Button text="Generate Report" onAction="#generateReport" />
</VBox>