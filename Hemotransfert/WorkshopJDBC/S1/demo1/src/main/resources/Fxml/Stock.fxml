<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<TabPane prefHeight="550.0" prefWidth="867.0" stylesheets="@../css/styles.css" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.StockController">
  <tabs>
    <Tab text="stock">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                    <VBox layoutX="38.0" layoutY="41.0" prefHeight="330.0" prefWidth="245.0" spacing="10.0" AnchorPane.topAnchor="41.0">
                        <children>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="type" />
                            <TextField fx:id="ttype" />
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="quantite" />
                            <TextField fx:id="tquantite" />
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="etat" />
                            <TextField fx:id="tetat" />
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="origine" />
                            <TextField fx:id="torigine" prefHeight="26.0" prefWidth="227.0" />
                        </children>
                    </VBox>
                    <ButtonBar layoutX="185.0" layoutY="406.0" prefHeight="44.0" prefWidth="318.0">
                        <buttons>
                            <Button fx:id="btnSave" mnemonicParsing="false" onAction="#createStock" text="save" />
                            <Button fx:id="btnUpdate" layoutX="298.0" layoutY="17.0" mnemonicParsing="false" onAction="#updateStock" text="update" />
                            <Button fx:id="btnDelete" layoutX="212.0" layoutY="17.0" mnemonicParsing="false" onAction="#deleteStock" text="delete" />
                            <Button fx:id="btnClear" layoutX="127.0" layoutY="17.0" mnemonicParsing="false" onAction="#clearField" text="clear" />
                            <Button fx:id="btntri" layoutX="127.0" layoutY="17.0" mnemonicParsing="false" onAction="#trierParType" text="tri" />
                            <Button fx:id="btnexportToPDF" layoutX="127.0" layoutY="17.0" mnemonicParsing="false" onAction="#exportToPDF" text="PDF" />
                        </buttons>
                    </ButtonBar>
                   <VBox layoutX="446.0" layoutY="14.0" prefHeight="74.0" prefWidth="359.0" spacing="10.0">
                       <children>
                           <TextField fx:id="searchByType" prefHeight="32.0" prefWidth="312.0" promptText="Search by type" />
                           <TextField fx:id="searchByEtat" prefHeight="39.0" prefWidth="340.0" promptText="Search by etat" />
                       </children>
                   </VBox>
                    <TableView fx:id="table" layoutX="443.0" layoutY="98.0" onMouseClicked="#getData" prefHeight="230.0" prefWidth="363.0">
                        <columns>

                            <TableColumn fx:id="coltype" prefWidth="75.0" text="Type" />
                            <TableColumn fx:id="colquantite" prefWidth="75.0" text="Quantite" />
                            <TableColumn fx:id="coletat" prefWidth="75.0" text="Etat" />
                            <TableColumn fx:id="colorigine" prefWidth="75.0" text="Origine" />
                        </columns>
                    </TableView>
               </children>
            </AnchorPane>
      </content>
    </Tab>
    <Tab text="centre">
      <content>
          <fx:include source="Centre.fxml" />
      </content>
    </Tab>
  </tabs>
</TabPane>
